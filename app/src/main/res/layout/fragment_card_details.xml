<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_baseline_grid_1x"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="0">

            <ImageView
                android:id="@+id/img_card_image"
                android:layout_width="155dp"
                android:layout_height="233dp"
                android:layout_gravity="center"
                android:padding="@dimen/material_baseline_grid_1x"
                android:src="@drawable/ic_cards_stack"/>

            <ImageView
                android:id="@+id/img_card_rarity"
                android:layout_width="@dimen/material_increment_0.5x"
                android:layout_height="@dimen/material_increment_0.5x"
                android:layout_gravity="start|bottom"
                android:src="@drawable/ic_diamond"/>

        </FrameLayout>

        <TextView
            android:id="@+id/txt_card_name"
            style="@style/MaterialTypography.Regular.Caption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="start|center_horizontal"
            android:maxLines="2"
            android:minLines="2"
            android:padding="@dimen/material_baseline_grid_1x"
            android:text="@string/cell_card_title_loading"
            android:textColor="@color/material_typography_primary_text_color_light"/>


    </LinearLayout>

</android.support.v7.widget.CardView>