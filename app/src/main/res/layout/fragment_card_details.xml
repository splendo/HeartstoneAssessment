<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_baseline_grid_1x"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_card_name"
            style="@style/MaterialTypography.Regular.Title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_horizontal"
            android:padding="@dimen/material_baseline_grid_1x"
            android:text="@string/cell_card_title_loading"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/img_card_image"
                android:layout_width="@dimen/material_baseline_grid_24x"
                android:layout_height="@dimen/material_baseline_grid_24x"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/imgbtn_bookmark_card"
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:src="@drawable/ic_bookmark_outline"
                android:tint="@color/colorPrimary"/>

        </FrameLayout>

        <TextView
            android:id="@+id/txt_card_flavor"
            style="@style/MaterialTypography.Regular.Caption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="start|center_horizontal"
            android:padding="@dimen/material_baseline_grid_1x"
            android:text="@string/cell_card_title_loading"
            android:textColor="@color/material_typography_primary_text_color_light"/>

    </LinearLayout>

</ScrollView>