    android:id="@+id/card_collectable_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|left"
    android:background="@drawable/corner_label">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
