<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="laurens.hearthstoneassessment">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:icon="@mipmap/ic_launcher"
            android:name=".application.HearthstoneAssessment"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="laurens.hearthstoneassessment.activities.detailpage.DetailPageActivity"
                android:label="@string/title_activity_detail_page"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="laurens.hearthstoneassessment.activities.mainpage.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>
</manifest>